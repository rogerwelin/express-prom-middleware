{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}

